{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@models/*": ["src/app/models/*"],
      "@controllers/*": ["src/app/controllers/*"],
      "@handlers/*": ["src/app/handlers/*"],
      "@proto/*": ["src/proto/*"],
      "@app/*": ["src/app/*"],
      "@utils/*": ["src/app/utils/*"]
    },
    "target": "es6",
    "module": "commonjs",
    "rootDir": "./",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "exclude": ["./node_modules"]
}
