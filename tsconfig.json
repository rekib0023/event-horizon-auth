{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@models/*": ["src/models/*"],
      "@controllers/*": ["src/controllers/*"],
      "@handlers/*": ["src/handlers/*"],
      "@proto/*": ["proto/*"],
      "@src/*": ["src/*"],
      "@utils/*": ["src/utils/*"]
    },
    "target": "es6",
    "module": "commonjs",
    "rootDir": "./",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "exclude": ["./node_modules"]
}
